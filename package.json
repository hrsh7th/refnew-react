{
  "name": "refnew-react",
  "version": "0.0.1",
  "description": "refnew react binding.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "scripts": {
    "build": "rimraf lib/**/*.{js,map} && tsc -p ./tsconfig.esm.json && tsc -p ./tsconfig.cjs.json",
    "test": "jest",
    "pretty-quick": "pretty-quick",
    "precommit": "pretty-quick --staged",
    "postcommit": "git reset",
    "release": "npm run build && np"
  },
  "author": "hrsh7th",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrsh7th/refnew-react.git"
  },
  "keywords": [
    "react",
    "mutable"
  ],
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/test/**/*.test.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "refnew": "0.0.5",
    "shallowequal": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^16.4.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.9",
    "@types/react-test-renderer": "^16.0.2",
    "@types/shallowequal": "^0.2.3",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "np": "^3.0.4",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "react": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1"
  }
}
